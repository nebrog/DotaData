<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentSpecialHero">

    <TextView
        android:id="@+id/heroName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/turboWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/heroName"
        app:layout_constraintLeft_toLeftOf="parent" />


    <ImageView
        android:id="@+id/iconHero"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iconHero"
        android:layout_marginTop="10dp"
        layout="@layout/items_favorite" />

    <include
        android:id="@+id/early"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/items_favorite"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <include
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/items_favorite"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/early" />

    <include
        android:id="@+id/late"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/items_favorite"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/mid" />


</androidx.constraintlayout.widget.ConstraintLayout>